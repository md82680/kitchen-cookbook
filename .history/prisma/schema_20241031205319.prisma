datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}


enum RecipeCategory {
  BREAKFAST
  DINNER
  DESSERT
  SNACK_APPETIZER
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  password      String
  role          UserRole  @default(USER)
  recipes       Recipe[]  //This relation needs cascade delete  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Recipe {
  id                Int            @id @default(autoincrement())
  recipeTitle       String
  recipeDescription String        // One-liner description
  recipeImage       String        // URL/path to image
  imageName         String?       // Original filename
  recipeCategory    RecipeCategory
  recipeInstructions String       // Main cooking instructions
  ingredients       Ingredient[]   // Separate model for structured ingredients
  author           User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId         Int
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Ingredient {
  id          Int      @id @default(autoincrement())
  amount      String   // Using String to allow for "1/2", "1/4" etc.
  unit        String   // e.g., "cups", "tablespoons"
  item        String   // The ingredient name
  recipe      Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    Int
}