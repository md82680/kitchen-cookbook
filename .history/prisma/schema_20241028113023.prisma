datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  recipes   Recipe[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  instructions String
  ingredients  String[]
   imageUrl     String   @default("/images/default-recipe.jpg") // Default image path
  imageName    String?  // Store the original filename
  category     String   // "breakfast", "dinner", "dessert"
  author       User     @relation(fields: [authorId], references: [id])
  authorId     Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}